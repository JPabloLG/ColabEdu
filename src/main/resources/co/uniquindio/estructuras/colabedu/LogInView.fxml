<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #DDEAF6;"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="co.uniquindio.estructuras.colabedu.Controller.LogInController">

    <!-- Título ColabEdu -->
    <Label layoutX="200" layoutY="40"
           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #0A0A23;"
           text="ColabEdu" />

    <!-- Contenedor central -->
    <VBox alignment="CENTER" layoutX="150" layoutY="120" prefWidth="300" spacing="15"
          style="-fx-background-color: white;
                 -fx-border-color: #0A0A23;
                 -fx-border-width: 1.5;
                 -fx-border-radius: 15;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 3);">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Campo de usuario con ícono -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitHeight="20" fitWidth="20" image="@images/user.png" />
            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-border-radius: 10; -fx-background-radius: 10;" />
        </HBox>

        <!-- Campo de contraseña con ícono -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fitHeight="20" fitWidth="20" image="@images/lock.png" />
            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-border-radius: 10; -fx-background-radius: 10;" />
        </HBox>

        <!-- Botón de login -->
        <Button text="Log In" onAction="#btn_logIn" prefWidth="100"
                style="-fx-background-color: #0A0A23; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" />

        <Label text="¿No tienes cuenta?" />
        <Button text="Crear cuenta" onAction="#btn_createAccount"
                style="-fx-background-color: Black; -fx-background-radius: 10; -fx-font-weight: Bold;" textFill="WHITE" />
    </VBox>
</AnchorPane>
