<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.uniquindio.estructuras.colabedu.Controller.LoadContentController"
            prefWidth="500" prefHeight="400">

   <VBox spacing="10" layoutX="10" layoutY="10">
      <!-- Título -->
      <Label text="Título del Contenido:"/>
      <TextField fx:id="txt_title" promptText="Ingrese el título"/>

      <!-- Tema -->
      <Label text="Tema:"/>
      <TextField fx:id="txt_topic" promptText="Ingrese el tema"/>

      <!-- Tipo de Contenido -->
      <Label text="Tipo de Contenido:"/>
      <TextField fx:id="txt_typeContent" promptText="Ej: Imagen, Audio, Video"/>

      <!-- Descripción -->
      <Label text="Descripción:"/>
      <TextArea fx:id="txt_description" promptText="Ingrese una descripción"
                wrapText="true" prefHeight="100"/>

      <!-- Archivo Seleccionado -->
      <Label fx:id="lbl_fileName" text="Ningún archivo seleccionado"/>

      <!-- Botones -->
      <HBox spacing="10">
         <Button text="Seleccionar Archivo" onAction="#btn_chooseFile"/>
         <Button text="Subir Contenido" onAction="#btn_loadContent"/>
         <Button text="Cancelar" onAction="#btn_back"/>
      </HBox>
   </VBox>
</AnchorPane>